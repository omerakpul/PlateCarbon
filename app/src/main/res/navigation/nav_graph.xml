<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/resultFragment">


    <fragment
        android:id="@+id/cameraFragment"
        android:name="app.platecarbon.CameraFragment"
        android:label="CameraFragment" >
        <action
            android:id="@+id/action_cameraFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_cameraFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="app.platecarbon.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="app.platecarbon.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.plr.RegisterFragment"
        android:label="RegisterFragment" />
    <fragment
        android:id="@+id/recentVehiclesFragment"
        android:name="app.platecarbon.ui.RecentVehiclesFragment"
        android:label="Son Eklenen Araçlar"
        tools:layout="@layout/fragment_recent_vehicles" />
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.plr.ResultFragment"
        android:label="ResultFragment" >
        <action
            android:id="@+id/action_resultFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_resultFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/vehicleAddFragment"
        android:name="app.platecarbon.ui.VehicleAddFragment"
        android:label="Araç Ekle"
        tools:layout="@layout/fragment_vehicle_add" />

    <fragment
        android:id="@+id/vehicleDetailFragment"
        android:name="app.platecarbon.ui.VehicleDetailFragment"
        android:label="Araç Detay"
        tools:layout="@layout/fragment_vehicle_detail" />
</navigation>